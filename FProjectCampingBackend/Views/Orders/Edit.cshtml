@model FProjectCampingBackend.Models.EFModels.Order

@{
    ViewBag.Title = "更改訂單狀態";
}

<h2>更改訂單狀態</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="mb-3">
            @*@Html.LabelFor(model => model.MemberId, "MemberId", htmlAttributes: new { @class = "form-label col-md-2" })*@
            @Html.LabelFor(model => model.Member.Name, "會員", htmlAttributes: new { @class = "form-label col-md-2" })
            @*@Html.DropDownList("MemberId", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.DisplayFor(model => model.Member.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Member.Name, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.OrderTime, "訂單時間", htmlAttributes: new { @class = "form-label col-md-2" })
            @*@Html.EditorFor(model => model.OrderTime, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DisplayFor(model => model.OrderTime, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.OrderTime, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Status, "訂單狀態", htmlAttributes: new { @class = "form-label col-md-2" })
            @Html.EditorFor(model => model.Status, new { htmlattributes = new { @class = "form-control" } })
            @*@Html.DropDownList("Status", null, htmlAttributes: new { @class = "form-control" })*@@*要改成下拉選單*@
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.PaymentType.Name, "付款方式", htmlAttributes: new { @class = "form-label col-md-2" })
            @*@Html.DropDownList("PaymentTypeId", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.DisplayFor(model => model.PaymentType.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.PaymentType.Name, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.TotalPrice, "總金額", htmlAttributes: new { @class = "form-label col-md-2" })
            @*@Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DisplayFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <div class="text-danger">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("訂單頁面", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}